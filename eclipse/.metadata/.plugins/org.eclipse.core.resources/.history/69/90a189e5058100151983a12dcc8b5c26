package com.digimoncrafters.item;

import com.digimoncrafters.block.DCBlock;
import com.digimoncrafters.creativetabs.DCCreativeTabs;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.block.Block;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.init.Blocks;
import net.minecraft.item.Item;
import net.minecraft.item.Item.ToolMaterial;
import net.minecraft.item.ItemFood;
import net.minecraft.item.ItemSeedFood;
import net.minecraftforge.common.util.EnumHelper;

public class DCItem {
	//This is a method, this is created first
	public static void mainRegistry(){
		initialiseItem(); //Then this is added after the last method
		registerItem(); //After that ^ this is added
	}
	public static ToolMaterial DigiWood  = EnumHelper.addToolMaterial("Digital Wood", 1,700, 6.0F, 4.0F, 10); // the third param (dmg) = 0.5 = Half of a Heart
	public static ToolMaterial Digizoit = EnumHelper.addToolMaterial("Chronedigizoit Metal", 4, 3000, 12.0F, 15.0F, 11);
	public static ToolMaterial Digizoid = EnumHelper.addToolMaterial("Chrome Digizoid", 5, 5000, 16.0F, 6.0F, 10);
	
	public static Item chrondigizoit;
	
	public static Item aquanData;
	public static Item aquanMidData;
	public static Item beastData;
	public static Item beastMidData;
	public static Item birdData;
	public static Item birdMidData;
	public static Item devilData;
	public static Item devilMidData;
	public static Item dragonData;
	public static Item dragonMidData;
	public static Item holyData;
	public static Item holyMidData;
	public static Item insectData;
	public static Item insectMidData;
	public static Item machineData;
	public static Item machineMidData;
	public static Item plantData;
	public static Item plantMidData;
	public static Item digitalDNA;
	public static Item mutantData;
	public static Item incubator;
	public static Item processor;
	public static Item digibone;
	public static Item misteryEgg;
	public static Item accelerator;
